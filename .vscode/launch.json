  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "HarmonyDebugger",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/ui/HarmonyDebuggerUi.csproj"
    },
    {
      "name": "HarmonyDebugger (Local DB)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/ui/bin/Debug/net9.0/HarmonyDebuggerUi.exe",
      "cwd": "${workspaceFolder}/ui",
      "args": ["--db=${workspaceFolder}/test-data/sena-3.sqlite"],
      "preLaunchTask": "build",
      "console": "internalConsole"
    },
    {
      "name": "HarmonyDebugger (Pick DB)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/ui/bin/Debug/net9.0/HarmonyDebuggerUi.exe",
      "cwd": "${workspaceFolder}/ui",
      "args": ["--db=${input:dbChoice}"],
      "preLaunchTask": "build",
      "console": "internalConsole"
    },
    {
      "name": "HarmonyDebugger (Prompt DB Path)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/ui/bin/Debug/net9.0/HarmonyDebuggerUi.exe",
      "cwd": "${workspaceFolder}/ui",
      "args": ["--db=${input:dbPath}"],
      "preLaunchTask": "build",
      "console": "internalConsole"
    }
  ],
  // Interactive inputs for DB selection / entry
  "inputs": [
    {
      "id": "dbChoice",
      "type": "pickString",
      "description": "Select a database file",
      "options": [
        "${workspaceFolder}/data/db.sqlite",
        "D:/snapshots/prod.sqlite",
        "D:/snapshots/staging.sqlite"
      ],
      "default": "${workspaceFolder}/data/db.sqlite"
    },
    {
      "id": "dbPath",
      "type": "promptString",
      "description": "Enter full or relative path to a .sqlite file",
      "default": "${workspaceFolder}/data/db.sqlite"
    }
  ]
}